---
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="min-h-full bg-slate-950 text-slate-100 antialiased">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portafolio</title>
	</head>
	<body class="min-h-screen bg-slate-950">
		<header class="sticky top-0 z-50 border-b border-slate-800/70 bg-slate-950/80 backdrop-blur">
			<div class="mx-auto flex h-14 w-full max-w-6xl items-center justify-between gap-4 px-4 sm:h-16 sm:gap-6 sm:px-6">
				<a href="/" class="inline-flex items-center gap-1.5 text-xs font-semibold tracking-[0.2em] text-emerald-400 sm:gap-2 sm:text-sm sm:tracking-[0.3em]">
					<span class="inline-block h-1.5 w-1.5 rounded-full bg-emerald-500 sm:h-2 sm:w-2" />
					<span class="hidden sm:inline">Martín Aguilera</span>
					<span class="sm:hidden">M.A.</span>
				</a>
				<nav aria-label="Principal" class="hidden md:block">
					<ul class="flex items-center gap-4 text-xs font-semibold text-slate-300 sm:gap-6 sm:text-sm">
						<li>
							<a class="transition hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300" href="#proyectos">
								Proyectos
							</a>
						</li>
						<li>
							<a class="transition hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300" href="#certificados">
								Certificados
							</a>
						</li>
						<li>
							<a class="transition hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300" href="#sobre-mi">
								Sobre mí
							</a>
						</li>
						<li>
							<a class="transition hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300" href="mailto:totoaguil022@gmail.com">
								Contacto
							</a>
						</li>
					</ul>
				</nav>
				<button
					type="button"
					aria-label="Menú"
					aria-expanded="false"
					data-mobile-menu-toggle
					class="inline-flex h-9 w-9 items-center justify-center rounded-lg border border-slate-700 text-slate-300 transition hover:border-slate-500 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300 active:scale-95 md:hidden"
				>
					<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				</button>
			</div>
			<nav
				aria-label="Menú móvil"
				data-mobile-menu
				class="hidden border-t border-slate-800/70 bg-slate-950/95 backdrop-blur md:hidden"
			>
				<ul class="flex flex-col gap-0 px-4 py-2">
					<li>
						<a
							class="block rounded-lg px-4 py-3 text-sm font-semibold text-slate-300 transition hover:bg-slate-900/50 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300"
							href="#proyectos"
							data-mobile-menu-close
						>
							Proyectos
						</a>
					</li>
					<li>
						<a
							class="block rounded-lg px-4 py-3 text-sm font-semibold text-slate-300 transition hover:bg-slate-900/50 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300"
							href="#certificados"
							data-mobile-menu-close
						>
							Certificados
						</a>
					</li>
					<li>
						<a
							class="block rounded-lg px-4 py-3 text-sm font-semibold text-slate-300 transition hover:bg-slate-900/50 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300"
							href="#sobre-mi"
							data-mobile-menu-close
						>
							Sobre mí
						</a>
					</li>
					<li>
						<a
							class="block rounded-lg px-4 py-3 text-sm font-semibold text-slate-300 transition hover:bg-slate-900/50 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-300"
							href="mailto:totoaguil022@gmail.com"
							data-mobile-menu-close
						>
							Contacto
						</a>
					</li>
				</ul>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<script is:inline>
			const toggle = document.querySelector('[data-mobile-menu-toggle]');
			const menu = document.querySelector('[data-mobile-menu]');
			const closeLinks = document.querySelectorAll('[data-mobile-menu-close]');

			if (toggle && menu) {
				toggle.addEventListener('click', () => {
					const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
					toggle.setAttribute('aria-expanded', String(!isExpanded));
					menu.classList.toggle('hidden');
				});

				closeLinks.forEach(link => {
					link.addEventListener('click', () => {
						toggle.setAttribute('aria-expanded', 'false');
						menu.classList.add('hidden');
					});
				});
			}
		</script>
	</body>
</html>
